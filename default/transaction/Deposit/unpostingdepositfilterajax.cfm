					<option value="17" >Period 17 - #dateformat(dateadd('m',iif(year(dateadd("d",1,getgeneral.lastaccyear)) eq year(getgeneral.lastaccyear) and month(dateadd("d",1,getgeneral.lastaccyear)) eq month(getgeneral.lastaccyear),DE("16"),DE("17")),getgeneral.lastaccyear),'mmm yyyy')#</option>
					<option value="18" >Period 18 - #dateformat(dateadd('m',iif(year(dateadd("d",1,getgeneral.lastaccyear)) eq year(getgeneral.lastaccyear) and month(dateadd("d",1,getgeneral.lastaccyear)) eq month(getgeneral.lastaccyear),DE("17"),DE("18")),getgeneral.lastaccyear),'mmm yyyy')#</option>
				</select>
            
            <input type="button" name="searchbtn" id="searchbtn" value="Go" onclick="ajaxFunction(document.getElementById('ajaxField2'),'unpostingdepositajax.cfm?sort='+document.getElementById('sort').value+'&fperiod='+document.getElementById('fperiod').value);">
		<cfelseif sort eq "sono" >

			Reference From 
			<input type="text" name="sonofrom" id="sonofrom" size="20" maxlength="100" >
			Reference To 
			<input type="text" name="sonoto" id="sonoto" size="20" maxlength="100">
            
            <input type="button" name="searchbtn" id="searchbtn" value="Go"
            onclick="ajaxFunction(document.getElementById('ajaxField2'),'unpostingdepositajax.cfm?sort='+document.getElementById('sort').value+'&sonofrom='+document.getElementById('sonofrom').value+'&sonoto='+document.getElementById('sonoto').value);"
            >
         <cfelseif sort eq "depositno" >

