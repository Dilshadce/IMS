<cfsetting showdebugoutput="no">
<cfoutput>

<cfset sort = url.sort >
		
		<cfif sort eq "wos_date" >

			Date From 
			<input type="text" name="datefrom" id="datefrom" size="10" maxlength="10" readonly>
            <img src="/images/cal.gif" width=17 height=15 border=0 onClick="showCalendarControl(datefrom);">
			Date To 
			<input type="text" name="dateto" id="dateto" size="10" maxlength="10" readonly>
            <img src="/images/cal.gif" width=17 height=15 border=0 onClick="showCalendarControl(dateto);">
            
            <input type="button" name="searchbtn" id="searchbtn" value="Go"
            onclick="ajaxFunction(document.getElementById('ajaxField2'),'unpostingdepositajax.cfm?sort='+document.getElementById('sort').value+'&datefrom='+document.getElementById('datefrom').value+'&dateto='+document.getElementById('dateto').value);"
            >
		
		<cfelseif sort eq "fperiod" >
